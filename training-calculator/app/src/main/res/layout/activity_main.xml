<?xml version="1.0" encoding="utf-8"?>

<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:columnCount="4"
    android:orientation="horizontal"
    android:padding="8dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/screen"
        android:layout_columnSpan="4"
        android:layout_gravity="fill"
        android:inputType="numberSigned|numberDecimal" />

    <Button
        android:id="@+id/key_1"
        android:text="@string/key_1" />

    <Button
        android:id="@+id/key_2"
        android:text="@string/key_2" />

    <Button
        android:id="@+id/key_3"
        android:text="@string/key_3" />

    <Button
        android:id="@+id/key_plus"
        android:layout_rowSpan="2"
        android:layout_gravity="fill"
        android:backgroundTint="@color/purple_700"
        android:text="@string/key_plus" />


    <Button
        android:id="@+id/key_4"
        android:text="@string/key_4" />

    <Button
        android:id="@+id/key_5"
        android:text="@string/key_5" />

    <Button
        android:id="@+id/key_6"
        android:text="@string/key_6" />

    <Button
        android:id="@+id/key_7"
        android:text="@string/key_7" />

    <Button
        android:id="@+id/key_8"
        android:text="@string/key_8" />

    <Button
        android:id="@+id/key_9"
        android:text="@string/key_9" />

    <Button
        android:id="@+id/key_minus"
        android:backgroundTint="@color/purple_700"
        android:text="@string/key_minus" />

    <Button
        android:id="@+id/key_0"
        android:layout_columnSpan="2"
        android:layout_gravity="fill"
        android:text="@string/key_0" />

    <Button
        android:id="@+id/key_dot"
        android:text="@string/key_dot" />


    <Button
        android:id="@+id/key_multiply"
        android:backgroundTint="@color/purple_700"
        android:text="@string/key_multiply" />

    <Button
        android:id="@+id/key_result"
        android:layout_columnSpan="2"
        android:layout_gravity="fill"
        android:backgroundTint="@color/black"
        android:text="@string/key_result" />

    <Button
        android:id="@+id/key_plus_minus"
        android:text="@string/key_plus_minus" />

    <Button
        android:id="@+id/key_divide"
        android:backgroundTint="@color/purple_700"
        android:text="@string/key_divide" />



</GridLayout>